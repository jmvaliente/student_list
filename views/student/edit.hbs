<h2>New Student</h2>

<form action="/student/{{student.id}}/edit" method="POST">

  <div class="form-group">
    <label for="fullname">fullname</label>
    <input name="fullname" type="text" class="form-control id="fullname"
      placeholder="Enter fullname" value="{{ students.fullname }}">
  </div>

  <div class="form-group">
    <label for="username">username</label>
    <input name="username" type="text" class="form-control id="username"
      placeholder="username" value="{{ students.username }}">

    
  </div>

  <div class="form-group">
    <label for="password">password</label>
    <input name="password" type="text" class="form-control {{#if error.password }}is-invalid{{/if}}"
      id="password" placeholder="password" value="{{ students.password }}">


  </div>

  <button type="submit" class="btn btn-primary">
    {{#if students.isNew }}
      Create
    {{else}}
      Update
    {{/if}}
  </button>
</form>